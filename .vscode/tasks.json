    "version": "2.0.0",
    "tasks": [
        {
            "label": "v generate v wrapper code",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v",
            "args": [
                "run",
                "${workspaceFolder}/.vscode/generator.vsh",
                "${file}"
            ],
            "group": "none",
            "problemMatcher": []
        }
    ]
}