{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [
        {
            "label": "v run",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v",
            "args": [
                "--enable-globals",
                "run",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "v run prod",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v",
            "args": [
                "--enable-globals",
                "-prod",
                "run",
                "${file}"
            ],
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "v run (show C command)",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v",
            "args": [
                "--enable-globals",
                "-show_c_cmd",
                "run",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "v run debug",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v",
            "args": [
                "--enable-globals",
                "-g",
                "run",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "v compile for c debugging",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v",
            "args": [
                "--enable-globals",
                "-pretty_c",
                "-cg",
                "-keep_c",
                "run",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "v compile for v debugging",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v",
            "args": [
                "--enable-globals",
                "-g",
                "-keep_c",
                "run",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "v live",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v",
            "args": [
                "--enable-globals",
                "-g",
                "-live",
                "run",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "v format",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v",
            "args": [
                "fmt",
                "${file}"
            ],
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "v generate c",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v -g --enable-globals -pretty_c -o ${fileBasenameNoExtension}.c ${fileBasename} && code ${fileBasenameNoExtension}.c",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "v generate c (WebGL)",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "v --enable-globals -pretty_c -d webgl -o ${fileBasenameNoExtension}.c ${fileBasename} && cat <(echo \"#include <emscripten.h>\") ${fileBasenameNoExtension}.c > wasm.c && make build",
            "group": "build",
            "problemMatcher": []
        }
    ]
}